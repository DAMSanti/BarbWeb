{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": "error"
  },
  "overrides": [
    {
      "files": [
        "scripts/**/*.js",
        "vite.config.ts",
        "tailwind.config.ts",
        "postcss.config.js"
      ],
      "rules": {
        "no-console": "off"
      }
    }
  ]
}
