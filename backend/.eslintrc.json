{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": "error",
    "@typescript-eslint/no-explicit-any": "off"
  },
  "overrides": [
    {
      "files": [
        "scripts/**/*.js",
        "scripts/**/*.ts",
        "prisma/**/*.ts",
        "generate-secrets.js",
        "test-import.mjs"
      ],
      "rules": {
        "no-console": "off"
      }
    }
  ]
}
