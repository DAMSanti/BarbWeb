// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model - Usuarios del sistema
model User {
  id                String     @id @default(cuid())
  email             String     @unique
  name              String?
  role              String     @default("user") // user, lawyer, admin
  
  // Autenticación
  passwordHash      String?    // NULL si solo usa OAuth
  emailVerified     Boolean    @default(false)
  emailVerifiedAt   DateTime?
  refreshTokens     String[]   @default([]) // Array de tokens válidos
  
  // Metadata
  lastLogin         DateTime?
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt

  // Relaciones
  payments                    Payment[]
  customAgents                CustomAgent[]
  oauthAccounts               OAuthAccount[]
  emailVerificationTokens     EmailVerificationToken[]

  @@map("users")
}

// OAuth Accounts - Para vincular múltiples proveedores OAuth
model OAuthAccount {
  id                String   @id @default(cuid())
  userId            String
  provider          String   // "google", "github", etc.
  providerAccountId String   // ID del usuario en el proveedor
  email             String?
  name              String?
  picture           String?
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map("oauth_accounts")
}

// Payment model - Registro de pagos (solo esto se persiste)
model Payment {
  id                    String   @id @default(cuid())
  userId                String
  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Información de pago
  stripeSessionId       String   @unique
  amount                Decimal  @db.Decimal(10, 2) // Importante: decimales exactos para dinero
  currency              String   @default("usd")
  status                String   // pending, succeeded, failed, refunded
  
  // Información de la consulta
  question              String   @db.Text
  category              String
  consultationSummary   String?  @db.Text // La respuesta de IA (opcional)
  reasoning             String?  @db.Text
  confidence            Float?
  
  // Stripe metadata
  receiptUrl            String?
  refundedAmount        Decimal? @db.Decimal(10, 2)
  
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@index([userId])
  @@index([status])
  @@index([stripeSessionId])
  @@map("payments")
}

// FAQ model - Base de preguntas frecuentes
model FAQ {
  id        String   @id @default(cuid())
  category  String   // Civil, Penal, Laboral, Administrativo, Mercantil, Familia
  question  String   @db.Text
  answer    String   @db.Text
  keywords  String[] // Para búsqueda por coincidencia
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([category])
  @@map("faqs")
}

// CustomAgent model - Para futuro: agente personalizado del usuario
model CustomAgent {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name          String
  systemPrompt  String   @db.Text
  knowledgeBase String?  @db.Text
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([userId])
  @@map("custom_agents")
}

// Email Verification Token model - Para verificación de email
model EmailVerificationToken {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  token     String   @unique // Hash del token para almacenar de forma segura
  expiresAt DateTime // Expira después de 24 horas
  
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([token])
  @@map("email_verification_tokens")
}
